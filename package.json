{
	"name": "rcasm-lsp",
	"description": "Relay computer assembly language extension",
	"author": "Paul Law",
	"license": "MIT",
	"version": "1.0.6",
	"repository": {
		"type": "git",
		"url": "https://github.com/paul80nd/rcasm-lsp"
	},
	"publisher": "paul80nd",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.100.0"
	},
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "rcasm configuration",
			"properties": {
				"languageServerRcasm.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerRcasm.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"languages": [
			{
				"id": "rcasm",
				"extensions": [
					".rcasm"
				],
				"aliases": [
					"rcasm"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "rcasm",
				"scopeName": "source.rcasm",
				"path": "./syntaxes/rcasm.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"prepublishOnly": "npm run clean",
		"vscode:prepublish": "npm run compile",
		"clean": "rimraf ./server/lib",
		"compile": "tsc -b",
		"compile-server": "tsc -p ./server/tsconfig.umd.json && tsc -p ./server/tsconfig.esm.json",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "jest ./server",
		"test-e2e": "sh ./scripts/e2e.sh",
		"prettier": "prettier --write ."
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@stylistic/eslint-plugin": "^5.6.0",
		"@types/jest": "^30.0.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^22.19.1",
		"eslint": "^9.39.1",
		"jest": "^30.2.0",
		"jest-extended": "7.0.0",
		"mocha": "^11.7.5",
		"prettier": "3.6.2",
		"ts-jest": "^29.4.5",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.47.0",
		"rimraf": "^6.1.0"
	}
}
